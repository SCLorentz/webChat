// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/rust:latest",
	"features": {
		"ghcr.io/devcontainers/features/go:1": {}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "uname -a",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			// preinstalled extensions for vscode
		  	"extensions": [
				"eamodio.gitlens",
				"seepine.md-editor",
				"PKief.material-icon-theme",
				"MS-vsliveshare.vsliveshare",
				"naumovs.color-highlight",
				"Tobermory.es6-string-html",
				"ctcuff.font-preview",
				"kisstkondoros.vscode-gutter-preview",
				"supermaven.supermaven",
				"rcore.rcore-unused-css-classes",
				"golang.Go"
			],
			// settings for vscode (other than .vscode/extensions.json)
			"settings": {
				"markdown.preview.openMarkdownLinks": "inEditor",
				"window.menuBarVisibility": "classic",
				"mediaPreview.video.autoPlay": true,
				"mediaPreview.video.loop": true,
				"liveshare.accessibility.voiceEnabled": false,
				"explorer.compactFolders": false,
				"explorer.incrementalNaming": "smart",
				"terminal.integrated.cursorStyle": "block"
			}
		}
	},
	"postCreateCommand": "chmod +x ./.devcontainer/cmd/setup.sh && ./.devcontainer/cmd/setup.sh"

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}