{
    "compilerOptions": {
        "target": "ESNext", // ou "ES6"
        "module": "ESNext", // ou "ES6"
        "moduleResolution": "Node",
        "strict": true, // Habilita todas as verificações estritas
        "noImplicitAny": true, // Não permite variáveis com tipo 'any' implícito
        "strictNullChecks": true, // Verifica se valores nulos e indefinidos são tratados
        "strictFunctionTypes": true, // Verifica a compatibilidade de tipos de função
        "strictBindCallApply": true, // Verifica a compatibilidade de métodos de chamada
        "noImplicitThis": true, // Não permite 'this' implícito
        "alwaysStrict": true, // Coloca o código em modo estrito
        "esModuleInterop": true,
        "skipLibCheck": true // Ignora a verificação de tipos em arquivos de definição de biblioteca
    }
}
