  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SCLorentz/webChat/issues"
  },
  "homepage": "https://github.com/SCLorentz/webChat#readme",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.9",
    "@types/react-dom": "^18.3.0",
    "@wasm-tool/wasm-pack-plugin": "^1.7.0",
    "autoprefixer": "^10.4.20",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.47",
